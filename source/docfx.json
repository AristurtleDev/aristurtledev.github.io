{
  "build": {
    "sitemap": {
        "baseurl": "https://aristurtle.net",
        "priority": 0.1,
        "changefreq": "daily"
    },
    "content": [
      {
        "files": [
          "games/**.md",
          "games/**/toc.yml",
          "tutorials/**.md",
          "tutorials/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**",
          "**/files/**",
          "**/videos/**"
        ]
      }
    ],
    "output": "../artifacts/_site",
    "globalMetadata": {
      "_title": "Aristurtle",
      "_appTitle": "Aristurtle",
      "_appName": "Aristurtle",
      "_appLogoPath": "images/logo.svg",
      "_appFooter": "Â© 2023 Christopher Whitley",
      "_description": "Official site of all Aristurtle related things",
      "_author": "Christopher Whitley",
      "_ogImage": "images/aristurtle.png",
      "_themeColor": "#49c961"
    },
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "modern",
      "templates/aristurtle"
    ],
    "markdownEngineProperties": {
        "markdigExtensions": [
          "Abbreviations",
          "Figures",
          "CustomContainers",
          "attributes"
        ]
      },
    "postProcessors": [],
    "keepFileLink": false,
    "disableGitFeatures": true
  }
}
